# Database
DATABASE_URL="file:prisma/dev.sqlite"

# Shopify Configuration
SHOPIFY_API_KEY="your_shopify_api_key_here"
SHOPIFY_API_SECRET="your_shopify_api_secret_here"
SHOPIFY_APP_URL="https://your-domain.com"
SHOPIFY_APP_SESSION_SECRET="your_secure_session_secret_32_chars_min"
SCOPES="read_products,write_products,read_orders,write_orders,read_customers,write_customers"

# Facebook Configuration
FACEBOOK_APP_ID="your_facebook_app_id"
FACEBOOK_APP_SECRET="your_facebook_app_secret"
FACEBOOK_REDIRECT_URI="https://your-domain.com/auth/facebook/callback"
FACEBOOK_ACCESS_TOKEN="your_facebook_marketing_api_access_token"

# AI Configuration - Working Keys
OPENAI_API_KEY="sk-your-openai-api-key-here"
GEMINI_API_KEY="your_gemini_api_key_here"

# Production Settings
NODE_ENV="production"
PORT="3001"
HOST="0.0.0.0"
LOG_LEVEL="info"

# Security Settings
SESSION_SECRET="your_ultra_secure_session_key_production"
RATE_LIMIT_WINDOW="900000"
RATE_LIMIT_MAX="100"
MAX_REQUEST_SIZE="10mb"

# Performance Settings
CACHE_TTL="3600"
DB_POOL_SIZE="10"
WORKER_THREADS="4"